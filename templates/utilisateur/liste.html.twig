{% extends 'base.html.twig' %}

{% block title %}Liste utilisateurs{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-lg">
            <table class="table">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Pseudo</th>
                  </tr>
                </thead>
                <tbody>
                    {% for utilisateur in utilisateurs %}
                  <tr>
                    <td>{{ utilisateur.id }}</td>
                    <td>
                      {{ utilisateur.pseudo }}
                      <a class="btn btn-danger float-right" href="{{ path('delete_user', {id: utilisateur.id })}}" title="Supprimer" onclick="return confirm('Êtes-vous sûr ?')">
                        <i class="fa fa-trash"></i>
                      </a>
                      <a class="btn btn-primary float-right" href="{{ path('update_user', {id: utilisateur.id})}}" title="Modifier">
                        <i class="fas fa-pen-square"></i>
                      </a>
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
        </div>
    </div>
</div>
{% endblock %}
